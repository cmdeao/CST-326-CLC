@{ ViewData["Title"] = "Personal Registration"; }
<div class="container text-center mt-3">
    <h2 class="display-4"><b>Create a Personal Account</b></h2>
    <hr class="mb-5" />

    <div class="steps mb-5">
        <div class="progress" style="position:relative; top: 42px; height: 30px; z-index:-1;">
            <div class="progress-bar" role="progressbar" style="width: 100%; background-color:#36B878"></div>
        </div>
        <div class="container d-flex justify-content-between">
            <button type="button" class="btn btn-lg text-dark" style="background-color:#36B878;">
                <h4>1</h4>
            </button>
            <button type="button" class="btn btn-lg text-dark" style="background-color:#36B878;">
                <h4>2</h4>
            </button>
            <button type="button" class="btn btn-lg text-dark" style="background-color:#36B878;">
                <h4>3</h4>
            </button>
        </div>
    </div>
</div>
<div class="container">
    <form>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floatingInput" placeholder="First Name">
            <label for="floatingInput">Username</label>
        </div>
        <div class="form-floating mb-3">
            <input type="password" class="form-control" id="floatingInput" placeholder="Password">
            <label for="floatingInput">Password</label>
        </div>
        <div class="form-floating mb-3">
            <input type="password" class="form-control" id="floatingInput" placeholder="Repeat Password">
            <label for="floatingInput">Repeat Password</label>
        </div>
        <button  class="btn btn-success" type="submit">Create Account</button>
    </form>
</div>