@{
    ViewData["Title"] = "Registration";
}

<div class="container text-center mt-3">
    <h2 class="display-4"><b>Create an Account</b></h2>
    <hr class="mb-5" />

    <div class="steps mb-5">
        <div class="progress" style="position:relative; top: 42px; height: 30px; z-index:-1;">
            <div class="progress-bar" role="progressbar" style="width: 3%; background-color:#36B878"></div>
        </div>
        <div class="container d-flex justify-content-between">
            <button type="button" class="btn btn-lg text-dark" style="background-color:#36B878;">
                <h4>1</h4>
            </button>
            <button type="button" class="btn btn-lg text-dark" style="background-color:#A0DEB6;">
                <h4>2</h4>
            </button>
            <button type="button" class="btn btn-lg text-dark" style="background-color:#A0DEB6;">
                <h4>3</h4>
            </button>
        </div>
    </div>
    <p class="display-6">Which account is right for you?</p>
    <div class="container card-selection mb-4 mt-5">
        <div class="row justify-content-around">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <i class="bi bi-person" style="font-size: 150px;"></i>
                        <h3 class="card-title">Personal</h3>
                        <p class="card-text">
                            Some quick example text to build on the card title and make up the bulk of
                            the card's content.
                        </p>
                        <a href="~/Registration/Personal" class="stretched-link"></a>
                        
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="card">

                    <div class="card-body">
                        <i class="bi bi-building" style="font-size: 150px;"></i>
                        <h3 class="card-title">Business</h3>
                        <p class="card-text">
                            Some quick example text to build on the card title and make up the bulk of
                            the card's content.
                        </p>
                        <a href="~/Registration/Business" class="stretched-link"></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <p>Have an account already? <a href="~/Home">Login</a></p>
</div>
